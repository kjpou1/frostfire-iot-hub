{
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python Run Host Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": []
        },
        {
            "name": "Python Run IOT Handler Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_iot_handler.py",
            "console": "integratedTerminal",
            "env": {
                "MQTT_BROKER": "localhost",
            },            
            "args": []
        }        
    ]
}